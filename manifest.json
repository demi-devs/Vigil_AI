{
  "manifest_version": 3,
  "name": "Vigil-AI",
  "version": "1.0",
  "description": "AI-powered phishing link detection and alerting system",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Phishing Detector"
  }
}